<hr>
<div>
    <p class="fs-5 fw-bold">
      All transactions
    </p>
</div>
<div>
  <div class="d-flex flex-row mb-3 justify-content-center">
    <table class="table">
      <tr class="table-success">

        <th>
          Merchant name
        </th>

        <th>
          Amount
        </th>

        <th>
          Cashback
        </th>

        <th>
          Card
        </th>

        <th>
          Location
        </th>

        <th>
          Date
        </th>

      </tr>

      <% @list_of_transactions.each do |a_transaction| %>
      <tr>

        <td>
          <%= a_transaction.merchant_name %>
        </td>

        <td>
          $<%= a_transaction.amount %>
        </td>

        <td>
          <%= a_transaction.cashback %>%
        </td>

        <td>
          <%= a_transaction.card.card.card_name %>
        </td>

        <td>
          <%= a_transaction.location %>
        </td>

        <td>
          <%= time_ago_in_words(a_transaction.created_at) %> ago
        </td>

      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
