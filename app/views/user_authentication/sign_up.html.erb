<div class="d-flex flex-row mb-3 justify-content-center">
  <p class="fs-3 fw-bold">Sign up</p>
</div>

<div class="d-flex flex-row mb-3 justify-content-center">
  <form action="/insert_user" method="post" class="row gy-2 gx-3 align-items-center col-md-6">

    <div class="row mb-3">
      <label for="email_box" class="col-sm-2 col-form-label">Email</label>
      <div class="col-sm-10">
        <input class="form-control" id="email_box" name="query_email" placeholder="Choose a email..." type="text">
      </div>
    </div>
                  
    <div class="row mb-3">
      <label for="phone_box" class="col-sm-2 col-form-label">Phone</label>
      <div class="col-sm-10">
        <input class="form-control" type="text" id="phone_box" name="query_phone">
      </div>
    </div>
      
    <div class="row mb-3">
      <label for="password_box" class="col-sm-2 col-form-label">Password</label>
      <div class="col-sm-10">
        <input class="form-control" id="password_box" name="query_password" placeholder="Choose a password..." type="password">
      </div>
    </div>

    <div class="row mb-3">
      <label for="password_confirmation_box" class="col-sm-2 col-form-label">Password Confirmation</label>
      <div class="col-sm-10">
        <input class="form-control" id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
      </div>
    </div>
    
    <div class="d-flex flex-row mb-3 justify-content-center">
    <div class="col-auto">
      <button class="btn btn-success">
        Sign up
      </button>
    </div>
    </div>
  </form>
</div>

<hr>

<div class="d-flex flex-row mb-3 justify-content-center">
  <p>
    Back to <a class="btn btn-outline-success" href="/user_sign_in" >Sign in</a>
  </p>
</div>
